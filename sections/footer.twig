<footer class="bg-background text-text pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Shop Section -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ 'footer.shop' |trans }}</h3>
        <ul class="space-y-2">
          <li><a href="/products" class="hover:text-primary transition-colors">{{ 'footer.all_products' |trans }}</a></li>
          <li><a href="/collections/new-arrivals" class="hover:text-primary transition-colors">{{ 'footer.new_arrivals' |trans }}</a></li>
          <li><a href="/collections/best-sellers" class="hover:text-primary transition-colors">{{ 'footer.best_sellers' |trans }}</a></li>
          <li><a href="/gifts" class="hover:text-primary transition-colors">{{ 'footer.gift_sets' |trans }}</a></li>
        </ul>
      </div>

      <!-- Customer Service Section -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ 'footer.customer_service' |trans }}</h3>
        <ul class="space-y-2">
          <li><a href="/faq" class="hover:text-primary transition-colors">{{ 'footer.faqs' |trans }}</a></li>
          <li><a href="/shipping" class="hover:text-primary transition-colors">{{ 'footer.shipping_returns' |trans }}</a></li>
          <li><a href="/track-order" class="hover:text-primary transition-colors">{{ 'footer.track_order' |trans }}</a></li>
          <li><a href="/contact" class="hover:text-primary transition-colors">{{ 'footer.contact_us' |trans }}</a></li>
        </ul>
      </div>

      <!-- Company Section -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ 'footer.company' |trans }}</h3>
        <ul class="space-y-2">
          <li><a href="/about" class="hover:text-primary transition-colors">{{ 'footer.about_us' |trans }}</a></li>
          <li><a href="/story" class="hover:text-primary transition-colors">{{ 'footer.our_story' |trans }}</a></li>
          <li><a href="/sustainability" class="hover:text-primary transition-colors">{{ 'footer.sustainability' |trans }}</a></li>
          <li><a href="/press" class="hover:text-primary transition-colors">{{ 'footer.press' |trans }}</a></li>
        </ul>
      </div>

      <!-- Newsletter Section -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ 'footer.newsletter' |trans }}</h3>
        <p class="mb-4">{{ 'footer.subscribe_description' |trans }}</p>
        <form class="flex" dir="ltr">
          <input 
            type="email" 
            placeholder="{{ 'footer.email_placeholder' |trans }}" 
            class="flex-grow px-4 py-2 border border-gray-300 focus:outline-none focus:border-primary rounded-none" 
            required 
          />
          <button 
            type="submit" 
            class="bg-primary hover:bg-accent text-white px-4 py-2 ml-2 transition-colors"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-200 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="mb-4 md:mb-0">&copy; {{ 'footer.copyright' |trans }}</p>
      <div class="flex space-x-6">
        <a href="#" class="hover:text-primary transition-colors" aria-label="Facebook">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="#" class="hover:text-primary transition-colors" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="2" fill="none"/>
            <circle cx="12" cy="12" r="5" fill="currentColor"/>
            <circle cx="18" cy="6" r="1" fill="currentColor"/>
          </svg>
        </a>
        <a href="#" class="hover:text-primary transition-colors" aria-label="Twitter">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M23 3.00005C22.0424 3.67552 20.9821 4.19214 19.86 4.53005C19.2579 3.83954 18.4573 3.34862 17.5617 3.12321C16.6661 2.8978 15.7176 2.94807 14.8457 3.26815C13.9737 3.58823 13.2193 4.16474 12.6866 4.92493C12.1539 5.68512 11.8697 6.59527 11.8697 7.53005V8.53005C10.2752 8.57475 8.69952 8.25642 7.25758 7.59751C5.81564 6.9386 4.54575 5.95764 3.54 4.72005C3.54 4.72005 -1.32 13.0301 7.11 17.3401C4.43224 19.2077 1.14425 19.9492 -2.01 19.4401C11.85 27.0001 23 17.2801 23 7.50005V3.00005Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="#" class="hover:text-primary transition-colors" aria-label="Pinterest">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
            <path d="M12 7C14.7614 7 17 9.23858 17 12C17 14.7614 14.7614 17 12 17C9.23858 17 7 14.7614 7 12C7 9.23858 9.23858 7 12 7Z" stroke="currentColor" stroke-width="2" fill="none"/>
            <path d="M12 10V14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 14L14 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>